<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/constraint_scratch_motion_scene"
    android:background="#FFFFFF">

    <com.goibibo.libs.views.ScratchConstraintLayoutView
        android:id="@+id/scratch_card"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            layout="@layout/lyt_hidden" />

    </com.goibibo.libs.views.ScratchConstraintLayoutView>


    <Button
        android:id="@+id/simulate_scale_move"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Scale &amp; Move"/>


</androidx.constraintlayout.motion.widget.MotionLayout>